@ВПроекте
метод Модуль(Число: Число): Число
    возврат Число >= 0 ? Число : -Число
;

@ВПроекте
метод КоличествоЗнаков(Число: Число): Число
    пер КоличествоЗнаков = 1
    если Число > 0
        КоличествоЗнаков += Log10(Число).ЦелаяЧасть()
    ;
    если КоличествоЗнаков%1 != 0
        КоличествоЗнаков += 1
    ;
    возврат КоличествоЗнаков    
;

@ВПроекте
статический метод ЧислоПи(): Число
    возврат ACos(-1)
;