метод КомандыВсеФункции(): ЧитаемаяКоллекция<ОсновнойИнтерфейс.ОписательКомандыВсеФункции>
    знч Группа = новый ОсновнойИнтерфейс.ОписательГруппыКомандВсеФункции(ЛичныеКабинетыКандидатов.ИМЯ_ПОДСИСТЕМЫ, 26)
    возврат [
        новый ОсновнойИнтерфейс.ОписательКомандыВсеФункции(
            Группа = Группа, 
            Представление = "Пользователи-кандидаты",
            СоздательФормыСписка = метод()-> возврат новый ПользователиКандидаты.АвтоматическаяФормаСписка();,
            СоздательФормыОбъекта = метод()-> возврат новый ПользователиКандидаты.АвтоматическаяФормаОбъекта();
            ),
        новый ОсновнойИнтерфейс.ОписательКомандыВсеФункции(
            Группа = Группа, 
            Представление = "Отклики кандидатов",
            СоздательФормыСписка = метод()-> возврат новый ОткликиКандидатов.АвтоматическаяФормаСписка();,
            СоздательФормыОбъекта = метод()-> возврат новый ОткликиКандидатов.АвтоматическаяФормаОбъекта();
            ),
        новый ОсновнойИнтерфейс.ОписательКомандыВсеФункции(
            Группа = Группа, 
            Представление = "Резюме кандидатов",
            СоздательФормыСписка = метод()-> возврат новый РезюмеКандидатов.АвтоматическаяФормаСписка();,
            СоздательФормыОбъекта = метод()-> возврат новый РезюмеКандидатов.АвтоматическаяФормаОбъекта();
            ),
        новый ОсновнойИнтерфейс.ОписательКомандыВсеФункции(
            Группа = Группа, 
            Представление = "Необработанные кандидаты",
            СоздательФормыСписка = метод()-> возврат новый НеобработанныеКандидаты.АвтоматическаяФормаСписка();,
            СоздательФормыОбъекта = метод()-> возврат новый НеобработанныеКандидаты.АвтоматическаяФормаОбъекта();
            ),
        новый ОсновнойИнтерфейс.ОписательКомандыВсеФункции(
            Группа = Группа, 
            Представление = "Образование кандидатов",
            СоздательФормыСписка = метод()-> возврат новый ОбразованиеКандидатов.АвтоматическаяФормаСписка();,
            СоздательФормыОбъекта = метод()-> возврат новый ОбразованиеКандидатов.АвтоматическаяФормаОбъекта();
            ),
        новый ОсновнойИнтерфейс.ОписательКомандыВсеФункции(
            Группа = Группа, 
            Представление = "Опыт работы кандидатов",
            СоздательФормыСписка = метод()-> возврат новый ОпытРаботыКандидатов.АвтоматическаяФормаСписка();,
            СоздательФормыОбъекта = метод()-> возврат новый ОпытРаботыКандидатов.АвтоматическаяФормаОбъекта();
            ),
        новый ОсновнойИнтерфейс.ОписательКомандыВсеФункции(
            Группа = Группа, 
            Представление = "Настройки витрины вакансий",
            СоздательФормыСписка = метод()-> возврат новый НастройкиВитриныВакансий.АвтоматическаяФормаСписка();,
            СоздательФормыОбъекта = метод()-> возврат новый НастройкиВитриныВакансий.АвтоматическаяФормаОбъекта();
            )
    ]
