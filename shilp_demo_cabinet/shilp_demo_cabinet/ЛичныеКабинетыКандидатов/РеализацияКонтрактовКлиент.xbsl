// Контракт ОсновнойИнтерфейсПоставщик

@ВПроекте
@Реализация
метод РазделыПриложения(): ЧитаемаяКоллекция<ОсновнойИнтерфейс.ОписаниеРаздела>
    знч Разделы: Массив<ОсновнойИнтерфейс.ОписаниеРаздела>
    если не ЛичныеКабинетыКандидатов.ПараметрыСеанса().ЛичныйКабинетКандидата
        возврат Разделы
    ;
    
    если ПодборПерсонала.ПараметрыСеанса().ВедетсяСборСогласий и не ЛичныеКабинетыКандидатов.ПараметрыСеанса().ПолученоСогласие
        Разделы.Добавить(ОписаниеРазделаСогласиеНаОбработкуПдн())
        возврат Разделы
    ;
    
    если НастройкиПодбораПерсонала.ШаблонАнкетыКандидата() != Неопределено
        Разделы.Добавить(ОписаниеРазделаОбоМне())
    ;
    
    если ЛичныеКабинетыКандидатов.ПараметрыСеанса().ЗаполненоРезюме
        Разделы.Добавить(ОписаниеРазделаВакансии())
    ;
     
    если ЛичныеКабинетыКандидатов.ПараметрыСеанса().Кандидат != Неопределено    
        Разделы.Добавить(ОписаниеРазделаМатериалыКандидатов())
        если ЛичныеКабинетыКандидатов.ПараметрыСеанса().ЕстьАнкеты 
            Разделы.Добавить(ОписаниеРазделаАнкетированиеИТестирование())
        ;
        Разделы.Добавить(ОписаниеРазделаСобеседованияКандидата()) 
        если ЛичныеКабинетыКандидатов.ПараметрыСеанса().ЕстьОфферы 
            Разделы.Добавить(ОписаниеРазделаОффер())
        ;
    ;
    
    возврат Разделы
;

